{
    "name": "brotorift",
    "displayName": "Brotorift",
    "description": "Brotorift Language Service",
    "version": "0.1.0",
    "publisher": "peter-ren",
    "engines": {
        "vscode": "^1.23.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/CDR2003/brotorift_vscode.git"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:brotorift"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "brotorift",
                "aliases": [
                    "Brotorift",
                    "brotorift"
                ],
                "extensions": [
                    ".brotorift"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "brotorift",
                "scopeName": "source.brotorift",
                "path": "./syntaxes/Brotorift.tmLanguage"
            }
        ],
        "snippets": [
            {
                "language": "brotorift",
                "path": "./snippets/brotorift.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
